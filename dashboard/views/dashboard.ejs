<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            margin: 10px;
            text-align: center;
            width: 150px;
        }

        .server-logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-size: cover;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <h1>Welcome to the Dashboard</h1>
    
    <form action="/select-servers" method="post">
        <h2>Select your servers:</h2>
        <div class="card-container">
            <% for (let i = 0; i < guilds.length; i++) { %>
                <div class="card">
                    <div class="server-logo" style="background-image: url('<%= guilds[i].iconURL %>');"></div>
                    <p><%= guilds[i].name %></p>
                    <input type="checkbox" name="servers" value="<%= guilds[i].id %>" id="server-<%= i %>">
                    <label for="server-<%= i %>">Select</label>
                </div>
            <% } %>
        </div>

        <input type="submit" value="Save">
    </form>
</body>
</html>
